# FastAPI settings
ENVIRONMENT=development

# CORS (comma-separated; include frontend origin for dev :5173 and prod :80)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost,http://127.0.0.1

# Security
ADMIN_DOCS_URL=/admin
API_ADMIN_USERNAME=admin
API_ADMIN_PASSWORD=your_password

# JWT settings
JWT_SECRET_KEY="your-long-random-hex-string"
JWT_ALGORITHM=HS256

# Database settings (PostgreSQL)
POSTGRES_USER=your_username
POSTGRES_PASSWORD=your_password
POSTGRES_DB=your_database_name
DATABASE_URL=postgresql://your_username:your_password@postgres:5432/your_database_name

# Frontend settings (Vite requires VITE_ prefix)
VITE_API_URL=http://localhost:8000

# Production: host port for frontend (default 80). Use another port if 80 is in use on VPS (e.g. 8080)
# FRONTEND_PORT=8080